<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.activities.EnterpriseDetailsActivity">

    <ImageView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[3]"
            android:id="@+id/imageEnterpriseView" android:layout_marginLeft="16dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/imageEnterpriseView" android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Enterprise Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/imageEnterpriseView" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/imageEnterpriseView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Enterprise Direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/imageEnterpriseView"/>

    <RatingBar
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/imageEnterpriseView"/>
    <TextView
            android:text="4.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintRight_toRightOf="@id/imageEnterpriseView"
            app:layout_constraintLeft_toLeftOf="@id/imageEnterpriseView"
            android:id="@+id/textViewAverageStars"/>
    <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStars5"
            android:layout_marginTop="15dp"
            android:layout_marginStart="175dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintStart_toStartOf="parent"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStars4"
            android:layout_marginStart="175dp"
            android:text="4"
            app:layout_constraintTop_toBottomOf="@+id/textViewStars5"
            app:layout_constraintStart_toStartOf="parent"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStars3"
            android:layout_marginStart="175dp"
            android:text="3"
            app:layout_constraintTop_toBottomOf="@+id/textViewStars4"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStars2"
            android:layout_marginStart="175dp"
            android:text="2"
            app:layout_constraintTop_toBottomOf="@+id/textViewStars3"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStars1"
            android:layout_marginStart="175dp"
            android:text="1"
            app:layout_constraintTop_toBottomOf="@+id/textViewStars2"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Write comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/commentButton"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewStars1"/>



    <ScrollView
            android:layout_width="395dp"
            android:layout_height="285dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/commentButton">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
       <!-- <include layout="@layout/item_commentary"/> -->
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>